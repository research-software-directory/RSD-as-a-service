{
  // required to indicate that eslint project is not in the root
  "eslint.workingDirectories": [
    "./frontend",
  ],
  // it tells VScode to use eslint plugin
  // Note! you might also need to disable Prettier or VSCode defaults
  // like eslint and format on save for other file types
  // "editor.formatOnSave": false,
  // "editor.formatOnType": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
  },
  // Tailwind plugin integration
  "css.validate": false,
  "editor.quickSuggestions": {
    "strings": true
  },
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "[java]": {
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.useTabStops": true,
    "editor.insertSpaces": false,
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.detectIndentation": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.detectIndentation": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.detectIndentation": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
}
